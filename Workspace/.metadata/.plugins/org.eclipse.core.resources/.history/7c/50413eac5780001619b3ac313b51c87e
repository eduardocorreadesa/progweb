    private void btnAtualizarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAtualizarActionPerformed
    	 try {
        PessoaFisica pessoa = new PessoaFisica();
        pessoa.setNome("Eduardo");
        pessoa.setCpf("08343346904");
        pessoa.setDataNascimento("10/10/1990");
        pessoa.setEstadoCivil("Solteiro");
        pessoa.setSexo("M");
        
       
        DefaultTableModel model = (DefaultTableModel) tabelaPessoaFisica.getModel();
        model.setNumRows(0); 
 
        model.addRow(new Object[]{pessoa.getNome(), pessoa.getCpf(), pessoa.getDataNascimento(), pessoa.getEstadoCivil(), pessoa.getSexo()}); 
        
        PessoaFisicaMongo  listPessoa = new PessoaFisicaMongo();
        
        
        List<PessoaFisica> cnts = listPessoa.getPessoaFisica();
        
       
        for (listPessoa c : cnts) {              
              //aqui vc colaca os valores que vc quer capturar da lista de contatos
              model.addRow(new Object[]{c.getNome(), c.getNumero()});           
        }       
       
            
        } catch (Exception ex) {
            Logger.getLogger(ListarPessoaFisica.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    }//GEN-LAST:event_btnAtualizarActionPerformed

